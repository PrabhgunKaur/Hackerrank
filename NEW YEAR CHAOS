void minimumBribes(int q_count, int* q) {
    int bribes = 0;
    
    
    for (int i = q_count - 1; i >= 0; i--) {
        
        if ((q[i] - 1) - i > 2) {
            printf("Too chaotic\n");
            return;
        }

       
        int start_check_index = (q[i] - 2 < 0) ? 0 : q[i] - 2;
        for (int j = start_check_index; j < i; j++) {
            if (q[j] > q[i]) {
                bribes++;
            }
        }
    }
    
    printf("%d\n", bribes);
}
